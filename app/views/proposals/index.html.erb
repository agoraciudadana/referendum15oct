<ul>
<% @proposals.each_with_index do |proposal, index| %>
  <li id="proposal_<%= index + 1 %>">
    <p><%= index + 1 %> <%= proposal.name %></p>
    <p><%= raw proposal.description %></p>
  
    <div>
      <%= link_to "Si", "#", :class => "vote" %>
      <%= link_to "No", "#", :class => "vote" %>
      <%= link_to "Abstention", "#", :class => "vote" %>
    </div>
  </li>
<% end %>
</ul>

<script>
  $(document).ready(function() {

<% for i in (1..5) %>
  $("#proposal_<%= i %> .vote").click(function () {
        $("#proposal_<%= i %>").hide("slide", { direction: "left" }, 1000);
  });
<% end %>
  });
</script>